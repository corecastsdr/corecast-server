# A minimal and secure sshd_config for the Corecast server

Port 2222

# Allow password authentication for the host.
PasswordAuthentication yes
ChallengeResponseAuthentication no
PermitRootLogin no
PermitEmptyPasswords no
PubkeyAuthentication no

# --- CRITICAL FOR PROXY ---
AllowTcpForwarding yes
GatewayPorts no

# --- CRITICAL FOR STABILITY ---
# Send a signal every 15 seconds to keep the tunnel alive
ClientAliveInterval 15
ClientAliveCountMax 3

# Standard settings
HostKey /app/host_keys/ssh_host_rsa_key
HostKey /app/host_keys/ssh_host_ed25519_key
LogLevel VERBOSE

# Disable unnecessary features
X11Forwarding no
AllowAgentForwarding no
PermitTTY no
