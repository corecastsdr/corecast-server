# A minimal and secure sshd_config for the Corecast server

Port 2222

# Allow password authentication for the host.
PasswordAuthentication yes
ChallengeResponseAuthentication no
PermitRootLogin no
PermitEmptyPasswords no
PubkeyAuthentication no

# --- THIS IS THE KEY ---
# We MUST allow TCP forwarding for the reverse proxy to work.
AllowTcpForwarding yes

# Standard settings
HostKey /app/host_keys/ssh_host_rsa_key
HostKey /app/host_keys/ssh_host_ed25519_key
LogLevel VERBOSE

# Disable unnecessary features
X11Forwarding no
AllowAgentForwarding no
PermitTTY no
